<% page_header "System Health" %>

<div class="space-y-6">
  <%# System Stats %>
  <div class="grid grid-cols-2 gap-4 sm:grid-cols-4">
    <div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl px-4 py-5">
      <dt class="text-sm font-medium text-gray-500">CPU</dt>
      <dd class="mt-1 text-2xl font-semibold text-gray-900">
        <%= @system_health.cpu_usage ? "#{@system_health.cpu_usage}%" : "N/A" %>
      </dd>
    </div>
    <div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl px-4 py-5">
      <dt class="text-sm font-medium text-gray-500">Memory</dt>
      <% if mem = @system_health.memory_usage %>
        <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= mem[:percentage] %>%</dd>
        <dd class="text-xs text-gray-500"><%= mem[:used] %> / <%= mem[:total] %></dd>
      <% else %>
        <dd class="mt-1 text-2xl font-semibold text-gray-900">N/A</dd>
      <% end %>
    </div>
    <div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl px-4 py-5">
      <dt class="text-sm font-medium text-gray-500">Disk</dt>
      <% if disk = @system_health.disk_usage %>
        <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= disk[:percentage] %>%</dd>
        <dd class="text-xs text-gray-500"><%= disk[:used] %> / <%= disk[:total] %></dd>
      <% else %>
        <dd class="mt-1 text-2xl font-semibold text-gray-900">N/A</dd>
      <% end %>
    </div>
    <div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl px-4 py-5">
      <dt class="text-sm font-medium text-gray-500">Uptime</dt>
      <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= @system_health.uptime || "N/A" %></dd>
    </div>
  </div>

  <%# Queue Stats %>
  <div class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl">
    <div class="px-4 py-6 sm:px-6">
      <h3 class="text-base font-semibold text-gray-900">Job Queue</h3>
    </div>
    <div class="border-t border-gray-100">
      <dl class="divide-y divide-gray-100">
        <div class="px-4 py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-900">Pending Jobs</dt>
          <dd class="mt-1 text-sm text-gray-700 sm:col-span-2 sm:mt-0"><%= @queue_stats[:pending] %></dd>
        </div>
        <div class="px-4 py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-900">Scheduled Jobs</dt>
          <dd class="mt-1 text-sm text-gray-700 sm:col-span-2 sm:mt-0"><%= @queue_stats[:scheduled] %></dd>
        </div>
        <div class="px-4 py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-900">In Progress</dt>
          <dd class="mt-1 text-sm text-gray-700 sm:col-span-2 sm:mt-0"><%= @queue_stats[:in_progress] %></dd>
        </div>
        <div class="px-4 py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-900">rclone Version</dt>
          <dd class="mt-1 text-sm text-gray-700 sm:col-span-2 sm:mt-0 font-mono"><%= @system_health.rclone_version || "N/A" %></dd>
        </div>
      </dl>
    </div>
  </div>

  <%# Running Backups %>
  <div class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl">
    <div class="px-4 py-6 sm:px-6">
      <h3 class="text-base font-semibold text-gray-900">Running Backups</h3>
    </div>
    <div class="border-t border-gray-100">
      <% if @running_backups.any? %>
        <ul role="list" class="divide-y divide-gray-100">
          <% @running_backups.each do |run| %>
            <li class="px-4 py-4 sm:px-6">
              <div class="flex items-center justify-between">
                <div class="min-w-0">
                  <p class="text-sm font-medium text-gray-900">
                    <%= link_to run.backup.name, backup_run_path(run.backup, run), class: "hover:underline" %>
                  </p>
                  <p class="text-xs text-gray-500">
                    Started <%= time_ago_in_words(run.started_at) %> ago
                    <% if run.rclone_pid %>
                      &middot; PID: <%= run.rclone_pid %>
                    <% end %>
                  </p>
                </div>
                <% if stats = run.process_stats %>
                  <div class="text-right text-xs text-gray-500">
                    <p>CPU: <%= stats[:cpu] %>%</p>
                    <p>Mem: <%= stats[:memory] %>%</p>
                  </div>
                <% end %>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <div class="px-4 py-8 text-center text-sm text-gray-500">
          No backups currently running.
        </div>
      <% end %>
    </div>
  </div>
</div>
