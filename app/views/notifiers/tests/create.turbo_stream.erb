<%= turbo_stream.replace dom_id(@notifier, :test) do %>
  <div class="flex items-center gap-4">
    <% if @success %>
      <div class="flex items-center gap-2 text-green-600">
        <svg class="size-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span class="text-sm font-medium"><%= @message %></span>
      </div>
    <% else %>
      <div class="flex items-center gap-2 text-red-600">
        <svg class="size-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" />
        </svg>
        <span class="text-sm font-medium">Failed: <%= @message.truncate(100) %></span>
      </div>
    <% end %>
    <%= button_to "Try Again", notifier_test_path(@notifier),
        class: "inline-flex items-center rounded-xl border-2 border-gray-200 bg-white px-4 py-2 text-sm font-semibold text-gray-700 hover:bg-gray-50",
        data: { turbo_frame: dom_id(@notifier, :test) } %>
  </div>
<% end %>
