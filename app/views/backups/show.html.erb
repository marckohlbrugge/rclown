<%= turbo_stream_from @backup %>

<% page_header "#{@backup.source_storage.name} â†’ #{@backup.destination_storage.name}" do %>
  <div class="flex items-center gap-x-3">
    <% if @backup.running? %>
      <%= button_to "Cancel", backup_cancellation_path(@backup), method: :post, class: "inline-flex items-center rounded-xl bg-red-600 px-4 py-2.5 text-sm font-semibold text-white hover:bg-red-500" %>
    <% else %>
      <%= button_to "Run Now", backup_execution_path(@backup), method: :post, class: "inline-flex items-center rounded-xl bg-green-600 px-4 py-2.5 text-sm font-semibold text-white hover:bg-green-500" %>
      <%= button_to "Dry Run", backup_dry_run_path(@backup), method: :post, class: "inline-flex items-center rounded-xl border-2 border-gray-200 bg-white px-4 py-2.5 text-sm font-semibold text-gray-700 hover:bg-gray-50" %>
    <% end %>
    <%= link_to "Edit", edit_backup_path(@backup), class: "inline-flex items-center rounded-xl border-2 border-gray-200 bg-white px-4 py-2.5 text-sm font-semibold text-gray-700 hover:bg-gray-50" %>
  </div>
<% end %>

<div class="space-y-6">
  <%# Backup Details %>
  <div class="bg-white rounded-2xl border-2 border-gray-200">
    <div class="px-4 py-6 sm:px-6 flex items-center justify-between">
      <h3 class="text-base font-semibold text-gray-900">Configuration</h3>
      <div class="flex items-center gap-x-2">
        <%= render "backups/status_badge", backup: @backup %>
        <% if @backup.enabled? %>
          <%= button_to "Disable", backup_enablement_path(@backup), method: :delete, class: "text-sm text-gray-500 hover:text-gray-700" %>
        <% else %>
          <%= button_to "Enable", backup_enablement_path(@backup), method: :post, class: "text-sm text-blue-600 hover:text-blue-500" %>
        <% end %>
      </div>
    </div>
    <div class="border-t border-gray-100">
      <dl class="divide-y divide-gray-100">
        <div class="px-4 py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-900">Source</dt>
          <dd class="mt-1 sm:col-span-2 sm:mt-0">
            <%= link_to @backup.source_storage, class: "inline-flex items-center gap-2 rounded-xl border-2 border-gray-200 px-3 py-2 hover:border-gray-300" do %>
              <%= render "providers/icon", provider: @backup.source_storage.provider, size_class: "size-5" %>
              <span class="font-medium text-gray-900"><%= @backup.source_storage.name %></span>
              <span class="text-sm text-gray-500"><%= @backup.source_storage.provider.name %></span>
            <% end %>
          </dd>
        </div>
        <div class="px-4 py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-900">Destination</dt>
          <dd class="mt-1 sm:col-span-2 sm:mt-0">
            <%= link_to @backup.destination_storage, class: "inline-flex items-center gap-2 rounded-xl border-2 border-gray-200 px-3 py-2 hover:border-gray-300" do %>
              <%= render "providers/icon", provider: @backup.destination_storage.provider, size_class: "size-5" %>
              <span class="font-medium text-gray-900"><%= @backup.destination_storage.name %></span>
              <span class="text-sm text-gray-500"><%= @backup.destination_storage.provider.name %></span>
            <% end %>
          </dd>
        </div>
        <div class="px-4 py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-900">Schedule</dt>
          <dd class="mt-1 text-sm text-gray-700 sm:col-span-2 sm:mt-0"><%= @backup.schedule.capitalize %></dd>
        </div>
        <div class="px-4 py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-900">Next Run</dt>
          <dd class="mt-1 text-sm text-gray-700 sm:col-span-2 sm:mt-0">
            <% if @backup.enabled? && @backup.next_run_at %>
              <%= @backup.next_run_at.strftime("%B %d, %Y at %I:%M %p") %>
              <span class="text-gray-400">(<%= time_ago_in_words(@backup.next_run_at) %> from now)</span>
            <% else %>
              <span class="text-gray-400">Disabled</span>
            <% end %>
          </dd>
        </div>
        <div class="px-4 py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-900">Last 30 Days</dt>
          <dd class="mt-1 sm:col-span-2 sm:mt-0 flex items-center">
            <%= render "backups/history_dots", backup: @backup %>
          </dd>
        </div>
      </dl>
    </div>
  </div>

  <%# Recent Runs %>
  <div class="bg-white rounded-2xl border-2 border-gray-200">
    <div class="px-4 py-6 sm:px-6">
      <h3 class="text-base font-semibold text-gray-900">Recent Runs</h3>
    </div>
    <div class="border-t border-gray-100">
      <ul id="<%= dom_id(@backup, :runs) %>" role="list" class="divide-y divide-gray-100">
        <% @runs.each do |run| %>
          <%= render "backup_runs/run", run: run %>
        <% end %>
      </ul>
      <% if @runs.empty? %>
        <div class="px-4 py-8 text-center text-sm text-gray-500">
          No runs yet. Click "Run Now" to start your first backup.
        </div>
      <% end %>
    </div>
  </div>
</div>
