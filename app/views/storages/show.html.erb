<% page_header @storage.name do %>
  <%= link_to "Edit", edit_storage_path(@storage), class: "inline-flex items-center rounded-xl border-2 border-gray-200 bg-white px-4 py-2.5 text-sm font-semibold text-gray-700 hover:bg-gray-50" %>
  <% unless @storage.in_use? %>
    <%= button_to "Delete", @storage, method: :delete, class: "ml-3 inline-flex items-center rounded-xl bg-red-600 px-4 py-2.5 text-sm font-semibold text-white hover:bg-red-500", data: { turbo_confirm: "Are you sure you want to delete this storage?" } %>
  <% end %>
<% end %>

<div class="space-y-6">
  <div class="bg-white rounded-2xl border-2 border-gray-200">
    <div class="px-4 py-6 sm:px-6">
      <h3 class="text-base font-semibold text-gray-900">Storage Details</h3>
    </div>
    <div class="border-t border-gray-100">
      <dl class="divide-y divide-gray-100">
        <div class="px-4 py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-900">Provider</dt>
          <dd class="mt-1 text-sm text-gray-700 sm:col-span-2 sm:mt-0 flex items-center gap-2">
            <%= render "providers/icon", provider: @storage.provider, size_class: "size-4" %>
            <%= link_to @storage.provider.name, @storage.provider, class: "text-blue-600 hover:text-blue-500" %>
            <span class="text-gray-400">(<%= @storage.provider.provider_type_name %>)</span>
          </dd>
        </div>
        <div class="px-4 py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-900">Bucket</dt>
          <dd class="mt-1 text-sm text-gray-700 sm:col-span-2 sm:mt-0 font-mono"><%= @storage.bucket_name %></dd>
        </div>
        <% if @storage.prefix.present? %>
          <div class="px-4 py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-900">Prefix</dt>
            <dd class="mt-1 text-sm text-gray-700 sm:col-span-2 sm:mt-0 font-mono"><%= @storage.prefix %></dd>
          </div>
        <% end %>
        <% if @storage.display_name.present? %>
          <div class="px-4 py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-900">Display Name</dt>
            <dd class="mt-1 text-sm text-gray-700 sm:col-span-2 sm:mt-0"><%= @storage.display_name %></dd>
          </div>
        <% end %>
        <div class="px-4 py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-900">Full Path</dt>
          <dd class="mt-1 text-sm text-gray-700 sm:col-span-2 sm:mt-0 font-mono"><%= @storage.full_path %></dd>
        </div>
        <div class="px-4 py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-900">Created</dt>
          <dd class="mt-1 text-sm text-gray-700 sm:col-span-2 sm:mt-0"><%= @storage.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
        </div>
      </dl>
    </div>
  </div>

  <% if @storage.backups.any? %>
    <div class="bg-white rounded-2xl border-2 border-gray-200">
      <div class="px-4 py-6 sm:px-6">
        <h3 class="text-base font-semibold text-gray-900">Used in Backups</h3>
      </div>
      <div class="border-t border-gray-100">
        <ul role="list" class="divide-y divide-gray-100">
          <% @storage.backups.each do |backup| %>
            <li class="flex items-center justify-between gap-x-6 px-4 py-4 sm:px-6">
              <div class="min-w-0">
                <p class="text-sm font-medium text-gray-900"><%= backup.name %></p>
                <p class="text-xs text-gray-500">
                  <% if backup.source_storage_id == @storage.id %>
                    <span class="text-blue-600">Source</span>
                  <% end %>
                  <% if backup.destination_storage_id == @storage.id %>
                    <span class="text-green-600">Destination</span>
                  <% end %>
                </p>
              </div>
              <%= link_to "View", backup, class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</div>
