<% page_header "Storages" do %>
  <%= link_to "New Storage", new_storage_path, class: "inline-flex items-center rounded-xl bg-blue-600 px-4 py-2.5 text-sm font-semibold text-white hover:bg-blue-500" %>
<% end %>

<div class="bg-white rounded-2xl border-2 border-gray-200">
  <% if @storages.any? %>
    <div data-controller="filter">
      <div class="px-4 py-3 sm:px-6 border-b border-gray-100">
        <input type="text"
               data-filter-target="input"
               data-action="input->filter#filter"
               placeholder="Filter storagesâ€¦"
               class="block w-full rounded-lg border-0 py-2 px-3 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm">
      </div>
      <ul role="list" class="divide-y divide-gray-100">
        <% @storages.each do |storage| %>
          <%= render "storage", storage: storage %>
        <% end %>
      </ul>
      <div class="px-4 py-6 text-center hidden" data-filter-target="empty">
        <p class="text-sm text-gray-500">No storages match your filter.</p>
      </div>
    </div>
  <% else %>
    <div class="px-4 py-12 text-center">
      <svg class="mx-auto size-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
      </svg>
      <h3 class="mt-2 text-sm font-semibold text-gray-900">No storages</h3>
      <p class="mt-1 text-sm text-gray-500">Import buckets from providers or create a storage manually.</p>
      <div class="mt-6">
        <%= link_to new_storage_path, class: "inline-flex items-center rounded-xl bg-blue-600 px-4 py-2.5 text-sm font-semibold text-white hover:bg-blue-500" do %>
          <svg class="-ml-0.5 mr-1.5 size-5" viewBox="0 0 20 20" fill="currentColor">
            <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
          </svg>
          New Storage
        <% end %>
      </div>
    </div>
  <% end %>
</div>
