<%= form_with model: storage, class: "space-y-6", builder: FormBuilder do |form| %>
  <% if storage.errors.any? %>
    <div class="rounded-xl border-2 border-red-200 bg-red-50 p-4">
      <h3 class="font-medium text-red-800"><%= pluralize(storage.errors.count, "error") %> prohibited this storage from being saved:</h3>
      <ul class="mt-2 list-disc list-inside text-red-700">
        <% storage.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :provider_id, "Provider", class: "block text-sm font-semibold text-gray-700 mb-2" %>
    <%= form.collection_select :provider_id, Provider.order(:name), :id, :name, { include_blank: "Select a provider" }, {} %>
  </div>

  <div>
    <%= form.label :bucket_name, class: "block text-sm font-semibold text-gray-700 mb-2" %>
    <%= form.text_field :bucket_name, class: "font-mono", placeholder: "my-bucket-name" %>
    <p class="mt-2 text-sm text-gray-500">The name of the bucket in your storage provider.</p>
  </div>

  <div>
    <%= form.label :prefix, class: "block text-sm font-semibold text-gray-700 mb-2" %>
    <%= form.text_field :prefix, class: "font-mono", placeholder: "backups/daily" %>
    <p class="mt-2 text-sm text-gray-500">Optional path prefix within the bucket (like a folder).</p>
  </div>

  <div>
    <%= form.label :display_name, class: "block text-sm font-semibold text-gray-700 mb-2" %>
    <%= form.text_field :display_name, placeholder: "My Primary Backup" %>
    <p class="mt-2 text-sm text-gray-500">Optional friendly name for this storage. Defaults to bucket name.</p>
  </div>

  <div class="flex items-center justify-end gap-x-4 border-t border-gray-200 pt-6">
    <%= link_to "Cancel", storage.persisted? ? storage : storages_path, class: "px-4 py-3 text-sm font-semibold text-gray-600 hover:text-gray-900" %>
    <%= form.submit storage.persisted? ? "Update Storage" : "Create Storage", class: "rounded-xl bg-blue-600 px-6 py-3 text-sm font-semibold text-white hover:bg-blue-500 cursor-pointer" %>
  </div>
<% end %>
