<li class="relative flex justify-between gap-x-6 px-4 py-5 hover:bg-gray-50 sm:px-6">
  <div class="flex min-w-0 gap-x-4">
    <div class="flex size-12 shrink-0 items-center justify-center rounded-lg bg-gray-100">
      <svg class="size-6 text-gray-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2" />
      </svg>
    </div>
    <div class="min-w-0 flex-auto">
      <p class="text-sm font-semibold text-gray-900">
        <%= link_to provider.name, provider, class: "hover:underline" %>
      </p>
      <p class="mt-1 flex text-xs text-gray-500">
        <span class="inline-flex items-center rounded-md bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10">
          <%= provider.provider_type_name %>
        </span>
        <% if provider.storages.any? %>
          <span class="ml-2 text-gray-400">
            <%= pluralize(provider.storages.count, "storage") %>
          </span>
        <% end %>
      </p>
    </div>
  </div>
  <div class="flex shrink-0 items-center gap-x-4">
    <div class="hidden sm:flex sm:flex-col sm:items-end">
      <p class="text-xs text-gray-500">Created <%= time_ago_in_words(provider.created_at) %> ago</p>
    </div>
    <svg class="size-5 flex-none text-gray-400" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
    </svg>
  </div>
</li>
