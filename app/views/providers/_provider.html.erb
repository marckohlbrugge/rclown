<li id="<%= dom_id(provider) %>" class="first:rounded-t-2xl last:rounded-b-2xl" data-filter-target="item" data-filter-text="<%= provider.name %> <%= provider.provider_type_name %>">
  <%= link_to provider, class: "flex justify-between gap-x-6 px-4 py-5 hover:bg-gray-50 rounded-[inherit] sm:px-6" do %>
    <div class="flex min-w-0 gap-x-4">
      <div class="flex size-12 shrink-0 items-center justify-center rounded-xl border-2 border-gray-200 bg-white">
        <%= render "providers/icon", provider: provider, size_class: "size-6" %>
      </div>
      <div class="min-w-0 flex-auto">
        <p class="text-base font-semibold text-gray-900">
          <%= provider.name %>
        </p>
        <p class="mt-1 flex items-center gap-x-2 text-sm text-gray-600">
          <span><%= provider.provider_type_name %></span>
          <% if provider.storages.any? %>
            <span class="text-gray-300">Â·</span>
            <span><%= pluralize(provider.storages.count, "storage") %></span>
          <% end %>
        </p>
      </div>
    </div>
    <div class="flex shrink-0 items-center gap-x-4">
      <div class="hidden sm:flex sm:flex-col sm:items-end">
        <p class="text-sm text-gray-500">Created <%= time_ago_in_words(provider.created_at) %> ago</p>
      </div>
      <svg class="size-5 flex-none text-gray-400" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
      </svg>
    </div>
  <% end %>
</li>
