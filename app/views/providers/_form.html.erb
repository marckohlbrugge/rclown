<%= form_with model: provider, class: "space-y-6", builder: FormBuilder do |form| %>
  <% if provider.errors.any? %>
    <div class="rounded-xl border-2 border-red-200 bg-red-50 p-4">
      <h3 class="font-medium text-red-800"><%= pluralize(provider.errors.count, "error") %> prohibited this provider from being saved:</h3>
      <ul class="mt-2 list-disc list-inside text-red-700">
        <% provider.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-sm font-semibold text-gray-700 mb-2" %>
    <%= form.text_field :name, placeholder: "My Cloudflare R2", autofocus: true %>
  </div>

  <div>
    <%= form.label :provider_type, "Provider Type", class: "block text-sm font-semibold text-gray-700 mb-2" %>
    <%= form.select :provider_type, Provider::PROVIDER_TYPES.map { |k, v| [v, k] }, { include_blank: "Select a provider type" }, data: { controller: "provider-type", action: "change->provider-type#toggle" } %>
  </div>

  <div data-provider-type-target="endpoint">
    <%= form.label :endpoint, class: "block text-sm font-semibold text-gray-700 mb-2" %>
    <%= form.text_field :endpoint, class: "font-mono", placeholder: "https://xxx.r2.cloudflarestorage.com" %>
    <p class="mt-2 text-sm text-gray-500">Required for Cloudflare R2, optional for others.</p>
  </div>

  <div data-provider-type-target="region">
    <%= form.label :region, class: "block text-sm font-semibold text-gray-700 mb-2" %>
    <%= form.text_field :region, placeholder: "us-east-1" %>
    <p class="mt-2 text-sm text-gray-500">Required for Amazon S3, not needed for R2 or B2.</p>
  </div>

  <div>
    <%= form.label :access_key_id, "Access Key ID", class: "block text-sm font-semibold text-gray-700 mb-2" %>
    <%= form.text_field :access_key_id, class: "font-mono", autocomplete: "off" %>
  </div>

  <div>
    <%= form.label :secret_access_key, "Secret Access Key", class: "block text-sm font-semibold text-gray-700 mb-2" %>
    <%= form.password_field :secret_access_key, class: "font-mono", autocomplete: "off", value: provider.persisted? ? provider.secret_access_key : nil %>
  </div>

  <div class="flex items-center justify-end gap-x-4 border-t border-gray-200 pt-6">
    <%= link_to "Cancel", provider.persisted? ? provider : providers_path, class: "px-4 py-3 text-sm font-semibold text-gray-600 hover:text-gray-900" %>
    <%= form.submit provider.persisted? ? "Update Provider" : "Create Provider", class: "rounded-xl bg-blue-600 px-6 py-3 text-sm font-semibold text-white hover:bg-blue-500 cursor-pointer" %>
  </div>
<% end %>
