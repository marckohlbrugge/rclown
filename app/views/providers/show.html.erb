<% page_header @provider.name do %>
  <%= link_to "Edit", edit_provider_path(@provider), class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
  <%= button_to "Delete", @provider, method: :delete, class: "ml-3 inline-flex items-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500", data: { turbo_confirm: "Are you sure you want to delete this provider? All associated storages will also be deleted." } %>
<% end %>

<div class="space-y-6">
  <%# Provider Details %>
  <div class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl">
    <div class="px-4 py-6 sm:px-6">
      <h3 class="text-base font-semibold text-gray-900">Provider Details</h3>
    </div>
    <div class="border-t border-gray-100">
      <dl class="divide-y divide-gray-100">
        <div class="px-4 py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-900">Type</dt>
          <dd class="mt-1 text-sm text-gray-700 sm:col-span-2 sm:mt-0">
            <span class="inline-flex items-center rounded-md bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10">
              <%= @provider.provider_type_name %>
            </span>
          </dd>
        </div>
        <% if @provider.endpoint.present? %>
          <div class="px-4 py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-900">Endpoint</dt>
            <dd class="mt-1 text-sm text-gray-700 sm:col-span-2 sm:mt-0 font-mono"><%= @provider.endpoint %></dd>
          </div>
        <% end %>
        <% if @provider.region.present? %>
          <div class="px-4 py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-900">Region</dt>
            <dd class="mt-1 text-sm text-gray-700 sm:col-span-2 sm:mt-0"><%= @provider.region %></dd>
          </div>
        <% end %>
        <div class="px-4 py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-900">Access Key ID</dt>
          <dd class="mt-1 text-sm text-gray-700 sm:col-span-2 sm:mt-0 font-mono">
            <%= @provider.access_key_id.first(4) %>****<%= @provider.access_key_id.last(4) %>
          </dd>
        </div>
        <div class="px-4 py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-900">Created</dt>
          <dd class="mt-1 text-sm text-gray-700 sm:col-span-2 sm:mt-0"><%= @provider.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
        </div>
      </dl>
    </div>
  </div>

  <%# Bucket Discovery %>
  <div class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl">
    <div class="px-4 py-6 sm:px-6 flex items-center justify-between">
      <h3 class="text-base font-semibold text-gray-900">Buckets</h3>
      <%= link_to provider_buckets_path(@provider), data: { turbo_frame: dom_id(@provider, :buckets) }, class: "text-sm font-medium text-blue-600 hover:text-blue-500" do %>
        Refresh
      <% end %>
    </div>
    <div class="border-t border-gray-100">
      <%= turbo_frame_tag dom_id(@provider, :buckets), src: provider_buckets_path(@provider), loading: :lazy do %>
        <div class="px-4 py-8 text-center">
          <div class="inline-block animate-spin rounded-full size-6 border-2 border-gray-300 border-t-blue-600"></div>
          <p class="mt-2 text-sm text-gray-500">Loading buckets...</p>
        </div>
      <% end %>
    </div>
  </div>

  <%# Imported Storages %>
  <% if @provider.storages.any? %>
    <div class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl">
      <div class="px-4 py-6 sm:px-6">
        <h3 class="text-base font-semibold text-gray-900">Imported Storages</h3>
      </div>
      <div class="border-t border-gray-100">
        <ul role="list" class="divide-y divide-gray-100">
          <% @provider.storages.each do |storage| %>
            <li class="flex items-center justify-between gap-x-6 px-4 py-4 sm:px-6">
              <div class="min-w-0">
                <p class="text-sm font-medium text-gray-900"><%= storage.display_name.presence || storage.bucket_name %></p>
                <% if storage.prefix.present? %>
                  <p class="text-xs text-gray-500">Prefix: <%= storage.prefix %></p>
                <% end %>
              </div>
              <%= link_to "View", storage, class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</div>
